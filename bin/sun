import sys
import time
import getpass
import commands
import subprocess

args = sys.argv
args.pop(0)

cmd = "/etc/rc.d/rc.sun"

if getpass.getuser() == "root":
    print("sun: Message: running as root ...")
    time.sleep(2)


def init():
    if len(args) == 1:
        if args[0] == "start":
            subprocess.call("{0} {1}".format(cmd, "start"), shell=True)
        elif args[0] == "stop":
            subprocess.call("{0} {1}".format(cmd, "stop"), shell=True)
        elif args[0] == "restart":
            subprocess.call("{0} {1}".format(cmd, "restart"), shell=True)
        elif args[0] == "status":
            out = commands.getoutput("ps -A")
            if "sun_daemon" in out:
                print("sun is running ...")
            else:
                print("sun not running")
        else:
            print("Usage: sun start|stop|restart|status")

    else:
        print("Usage: sun start|stop|restart|status")

init()
